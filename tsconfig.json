{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
      "types": ["node", "jest", "./types/react-leaflet-shims"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "types/**/*.d.ts",
    "app",
    "components",
    "lib",
    "pages",
    "scripts",
    "tests",
    "__tests__",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts/uiSnapshot.ts",
    "tests",
    "__tests__"
  ]
}
