{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    // Enable default imports from CommonJS modules
    "esModuleInterop": true,
    // Allow default import interop for modules without ES exports
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "app",
    "components",
    "lib",
    "pages",
    "scripts",
    "hooks",
    "__tests__",
    "tests",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}